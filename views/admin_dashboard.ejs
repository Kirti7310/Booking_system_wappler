<!-- Wappler include head-page="layouts/main" is="dmx-app" id="admin_dashboard" appconnect="local" bootstrap5="cdn" jquery_35="cdn" fontawesome_4="cdn" components="{dmxBootstrap5Collapse:{},dmxBootstrap5Modal:{},dmxBrowser:{}}" -->

<!-- Replace Font Awesome 4 with Font Awesome 6 -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<dmx-serverconnect id="admin_access" url="/api/admin_login_success" credentials="true"></dmx-serverconnect>
<div is="dmx-browser" id="browser1"></div>
<dmx-serverconnect id="serverconnect1" url="/api/admin_nav"></dmx-serverconnect>

<div class="container py-5">
    <div class="row">

        <!-- Toggle Button for Sidebar Navigation -->
        <div class="text-end mb-3 d-md-none">
            <button class="btn btn-outline-success rounded-pill px-3 py-1" type="button" data-bs-toggle="collapse" data-bs-target="#adminSidebar" aria-expanded="false" aria-controls="adminSidebar">
                <i class="fa-solid fa-bars"></i>
            </button>
        </div>

        <!-- Sidebar Navigation -->
        <div class="col-md-3 mb-4 collapse d-md-block" id="adminSidebar">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body bg-white">
                    <h4 class="mb-4 text-success fw-bold">Welcome Admin</h4>
                    <ul class="list-group">
                        <div id="repeat1" is="dmx-repeat" dmx-bind:repeat="serverconnect1.data.admin_nav">
                            <li class="list-group-item border-0 p-2">
                                <a dmx-text="name" class="text-decoration-none fw-semibold text-dark cursor-pointer"></a>
                            </li>
                        </div>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Dashboard Content -->
        <div class="col-md-9">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body text-center p-5 bg-light">
                    <h2 class="text-success fw-bold mb-4">Dashboard</h2>
                    <p class="text-muted mb-4 fs-6">
                        Welcome to the <span class="fw-semibold text-success">Admin Panel</span>. Here, you can efficiently manage and oversee all meeting room reservations.
                        Use this dashboard to <span class="fw-semibold">view current bookings</span>, assign or edit slots, and ensure smooth scheduling for all users.
                        Meeting rooms are reserved on a <span class="fst-italic">first-come, first-served</span> basis — help maintain optimal room utilization and prevent overlaps.
                    </p>
                    <p class="text-muted mb-4 fs-6" dmx-text="">
                        Welcome to the <span class="fw-semibold text-success">Admin Panel</span>. Here, you can efficiently manage and oversee all meeting room reservations.
                        Use this dashboard to <span class="fw-semibold">view current bookings</span>, assign or edit slots, and ensure smooth scheduling for all users.
                        Meeting rooms are reserved on a <span class="fst-italic">first-come, first-served</span> basis — help maintain optimal room utilization and prevent overlaps.
                    </p>

                    <!-- Collapse Panel -->
                    <div class="collapse show" id="collapse1" is="dmx-bs5-collapse" show="true">
                        <div class="row g-4 justify-content-center">
                            <div class="col-md-5">
                                <div class="p-4 border rounded-4 shadow-sm bg-white h-100 d-flex flex-column justify-content-between">
                                    <div>
                                        <h5 class="mb-3 text-dark"><i class="fa-solid fa-calendar-check me-2 text-success"></i>Manage Bookings</h5>
                                    </div>
                                    <button class="btn btn-outline-success w-100 mt-3 rounded-pill" dmx-on:click="browser1.goto('/admin/booking_admin_side')">Click Here</button>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="p-4 border rounded-4 shadow-sm bg-white h-100 d-flex flex-column justify-content-between">
                                    <div>
                                        <h5 class="mb-3 text-dark"><i class="fa-solid fa-users me-2 text-success"></i>View Users</h5>
                                    </div>
                                    <button class="btn btn-outline-success w-100 mt-3  rounded-pill" dmx-on:click="browser1.goto('/admin/users_admin')">Click Here</button>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="p-4 border rounded-4 shadow-sm bg-white h-100 d-flex flex-column justify-content-between">
                                    <div>
                                        <h5 class="mb-3 text-dark"><i class="fa-solid fa-door-open me-2 text-success"></i>Manage Meeting Rooms</h5>
                                    </div>
                                    <button class="btn btn-outline-success w-100 mt-3 rounded-pill" dmx-on:click="browser1.goto('/admin/meeting_rooms')">Click Here</button>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="p-4 border rounded-4 shadow-sm bg-white h-100 d-flex flex-column justify-content-between">
                                    <div>
                                        <h5 class="mb-3 text-dark"><i class="fa-solid fa-chart-line me-2 text-success"></i>User Status</h5>
                                    </div>
                                    <button class="btn btn-outline-success w-100 mt-3 rounded-pill" dmx-on:click="browser1.goto('/admin/users_admin')">Click Here</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>

<meta name="ac:route" content="/admin_dashboard">