<!-- Wappler include head-page="layouts/main" is="dmx-app" id="bookings_all" appConnect="local" bootstrap5="cdn" jquery_35="cdn" fontawesome_4="cdn" components="{dmxDataTraversal:{},dmxBootstrap5TableGenerator:{}}" -->
<dmx-serverconnect id="display_all_bookings" url="/api/display_users_slot_details"></dmx-serverconnect>
<dmx-data-detail id="all_bookings" dmx-bind:data="display_all_bookings.data.display_users_slot_details" key="booking_id"></dmx-data-detail>
<meta name="ac:route" content="/bookings_all">

<div class="container mt-5">
    <!-- Header and Back Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">

        <h2 class="fw-bold text-dark">All Bookings Overview</h2><button id="btn1" class="btn bg-dark text-light rounded-pill" dmx-on:click="browser1.goto('/users_dashboard')">Back To Dashboard</button>
    </div>

    <!-- Table -->
    <div class="card shadow-sm">
        <div class="card-header fw-semibold">
            Booking Details
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Meeting Room</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="display_all_bookings.data.display_users_slot_details" id="tableRepeat1">
                        <tr>
                            <td dmx-text="date"></td>
                            <td dmx-text="start_time"></td>
                            <td dmx-text="end_time"></td>
                            <td dmx-text="mroom_name"></td>
                            <td dmx-text="status"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>