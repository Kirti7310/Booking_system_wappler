<!-- Wappler include head-page="layouts/main" is="dmx-app" id="registeration_page" appConnect="local" bootstrap5="cdn" jquery_35="cdn" fontawesome_4="cdn" components="{dmxBootstrap5Modal:{},dmxBrowser:{},dmxValidator:{},dmxNotifications:{}}" -->
<dmx-notifications id="notifies1"></dmx-notifications>
<div is="dmx-browser" id="browser1"></div>

<meta name="ac:route" content="/registeration_page">
<div class="container py-5">
    <form id="register1" method="post" is="dmx-serverconnect-form" action="/api/save_users" credentials="true" dmx-on:success="notifies1.success('You\'re in! Let\'s get started.');browser1.goto('/login_page')" dmx-on:error="">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4">Create An Account</h2>
                        <p class="text-center text-muted mb-4">Sign up now to easily book and manage your slots online!</p>

                        <div class="form-floating mb-3">
                            <input type="text" id="username" name="username" class="form-control rounded-pill" placeholder="Enter Your Full Name" required="">
                            <label for="username">Full Name</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="email" id="email" name="email" class="form-control rounded-pill" placeholder="Enter Your Email" required="" data-rule-email="">
                            <label for="email">Email address</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password" id="password" name="password" class="form-control rounded-pill" placeholder="Enter Your Password" required="" minlength="6" data-msg-minlength="Please enter at least 6 characters.">
                            <label for="password">Password</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="number" id="phone" name="phone" pattern="^\+?\d{1,4}?[-.\s]?\(?\d{1,4}?\)?[-.\s]?\d{1,4}[-.\s]?\d{1,4}[-.\s]?\d{1,4}$" class="form-control rounded-pill" placeholder="Enter Your Phone" required="">
                            <label for="phone">Phone Number</label>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Gender</label><br>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="genderMale" name="gender" value="Male" checked="" required="">
                                <label class="form-check-label" for="genderMale">Male</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="genderFemale" name="gender" value="Female" required="">
                                <label class="form-check-label" for="genderFemale">Female</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="genderOther" name="gender" value="Other" required="">
                                <label class="form-check-label" for="genderOther">Other</label>
                            </div>
                        </div>

                        <div class="text-end mb-3">
                            <small class="text-muted">Been here before? <a href="/login_page" class="text-success fw-semibold">Log in here!</a></small>
                        </div>

                        <div class="d-grid">
                            <button id="register1_submit" class="btn btn-success btn-lg rounded-pill" type="submit">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>